<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra superior: los tabs -->
    <LinearLayout
        android:id="@+id/topTabs"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/app_bar_bg"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tabLeidos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tab_leidos"
            android:textSize="16sp"
            android:textColor="@color/tab_inactive_text"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tabDeseados"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tab_deseados"
            android:textSize="16sp"
            android:textColor="@color/tab_inactive_text"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Contenedor para fragments -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_below="@id/topTabs"
        android:layout_above="@+id/bottomSpacer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Spacer en bottom para asegurar que el FAB no tape contenido si se usa overlay -->
    <View
        android:id="@+id/bottomSpacer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <!-- BotÃ³n "+" fijo abajo-derecha (simulando FAB sin dependencia Material) -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="+"
        android:textSize="28sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button_bg"
        android:textColor="@android:color/white" />
</RelativeLayout>
